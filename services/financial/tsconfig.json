{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@entities": ["src/entity/*"],
      "@models": ["src/models/*"],
      "@repositories": ["src/repositories/*"],
      "@services": ["src/services/*"]
    }
  },
  "exclude": ["node_modules"]
}
